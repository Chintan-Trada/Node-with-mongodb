<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>

    </head>

    <body>

        <div id="wrapper">

            <%- include('./partials/header'); %>

            <div class="content-page">
                <div class="content">

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card-box">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="p-2">
                                                <% for(var i=0; i < testnomial.length; i++) { %>
                                                <form class="form-horizontal" action="/testnomial-edit?id=<%= testnomial[i].id %>" method="POST" role="form">
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label" for="simpleinput">Client Name</label>
                                                        <div class="col-md-10">
                                                            <input type="text" name="clientName"  required class="form-control" placeholder="Client Name"  value="<%= testnomial[i].clientName %>">
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label" for="example-textarea">Feedback</label>
                                                        <div class="col-md-10">
                                                            <textarea class="form-control" name="feedback"  required rows="5" id="example-textarea" placeholder="Feedback" ><%= testnomial[i].feedback %></textarea>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label">Image</label>
                                                        <div class="col-md-8 row">
                                                            <% for (var j = 0; j < testnomial[i].image.data.length; j++) {%>
                                                                <div class="col-md-4">
                                                                    <img class="mb-2" src="data:image/<%=testnomial[i].image.contentType[j]%>;base64,
                                                                        <%=testnomial[i].image.data[j].toString('base64')%>" height="150px">  <br>                                                      
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                    </div>
    
                                                    <div class="text-center mt-3">
                                                        <a href="/testnomial">
                                                            <button type="button" class="btn btn-bordered-danger waves-effect  width-md waves-light">Cancle</button>
                                                        </a>
                                                        &nbsp;
                                                        <button type="submit" class="btn btn-bordered-success waves-effect  width-md waves-light">Save</button>
                                                    </div>
                                                </form>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div>
                        </div>
    
                        
                    </div> 

                </div> 
            </div>
        </div>

        <%- include('./partials/scprit'); %>
        
    </body>
</html>