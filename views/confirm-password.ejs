<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>

    </head>


    <body class="">

        <div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="text-center">
                            <a href="index.html" class="logo">
                            </a>
                        </div>
                        <div class="card">

                            <div class="card-body p-4">
                                
                                <div class="text-center mb-4">
                                    <h4 class="text-uppercase mt-0">Change Password</h4>
                                </div>

                                <form class="form-horizontal" action="/confirm-password" method="POST">

                                    <input type="hidden" name="username" value="<%= data.username %>">
                                    <div class="form-group mb-3">
                                        <label  for="simpleinput">Password</label>
                                        <div>
                                            <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" required >
                                        </div>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label  for="simpleinput">Confirm Password</label>
                                        <div>
                                            <input type="password" name="confirmpassword" id="confirmpassword" class="form-control" placeholder="Enter Confirm Password" required >
                                        </div>
                                    </div>

                                    <div class="text-center mt-3">
                                        <button type="submit" class="btn btn-primary btn-block waves-effect width-md waves-light">Submit</button>
                                    </div>

                                    
                                </form>
                                
                                

                            </div> 
                        </div>
                        <div class="row mt-3">
                            <div class="col-12 text-center">
                                <p class="text-muted">Back to <a href="login" class="text-dark ml-1"><b>Log in</b></a></p>
                            </div> 
                        </div>

                    </div> 
                </div>
            </div>

        </div>

        <%- include('./partials/scprit'); %>
        
    </body>
</html>