<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>

    </head>

    <body>

        <div id="wrapper">

            <%- include('./partials/header'); %>
            
            <div class="content-page">
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card-box">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="p-2">
                                                <% for(var i=0; i < portfolio.length; i++) { %>
                                                    <form class="form-horizontal"   method="POST" action="/portfolio-edit?id=<%= portfolio[i].id %>">
                                                        
                                                        <div class="form-group row">
                                                            <label class="col-md-2 col-form-label" >Project Name</label>
                                                            <div class="col-md-10">
                                                                <input type="text" name="projectName"  class="form-control" placeholder="Project Name"  value="<%= portfolio[i].projectName %>">
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-md-2 col-form-label" >Project Category</label>
                                                            <div class="col-md-10">
                                                                <input type="text" name="projectCategory"    class="form-control" placeholder="Project Category"  value="<%= portfolio[i].projectCategory %>">
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-md-2 col-form-label">Description</label>
                                                            <div class="col-md-10">
                                                                <textarea class="form-control" name="discription" rows="5"   placeholder="Description" ><%= portfolio[i].discription %></textarea>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row">
                                                            <label class="col-md-2 col-form-label">Image</label>
                                                            <div class="col-md-4">
                                                                <img src="data:image/<%=portfolio[i].image.contentType%>;base64,
                                                                <%=portfolio[i].image.data.toString('base64')%>" height="150px">
                                                            </div>
                                                        </div>
        
                                                        <div class="text-center mt-3">
                                                            <a href="/portfolio">
                                                                <button type="button" class="btn btn-bordered-danger waves-effect  width-md waves-light">Cancle</button>
                                                            </a>
                                                            &nbsp;
                                                            <button type="submit" class="btn btn-bordered-success waves-effect  width-md waves-light">Save</button>
                                                        </div>
                                                    </form>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div>
                        </div>
                    </div> 
                </div> 
            </div>
        </div>

        <%- include('./partials/scprit'); %>
        
        
    </body>
</html>