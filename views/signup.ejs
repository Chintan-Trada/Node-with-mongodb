<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>

    </head>

    <body class="">
        <div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="text-center">
                            <a href="login" class="logo">
                            </a>
                        </div>
                        <div class="card">
                            <div class="card-body p-4">
                                
                                <div class="text-center mb-4">
                                    <h4 class="text-uppercase mt-0">Login</h4>
                                </div>
                                
                                <form name="login-form" action="/signup" method="POST" enctype="multipart/form-data">
                                    <div class="form-group mb-3">
                                        <label for="emailaddress">Username</label>
                                        <input class="form-control" type="text" id="username" name="username" required="" value="" placeholder="Enter username">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="password">Password</label>
                                        <input class="form-control" type="password" required="" id="password" name="password" value="" placeholder="Enter password">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="password">Firstname</label>
                                        <input class="form-control" type="text" required="" id="firstname" name="firstname" value="" placeholder="Enter Firstname">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="text">Lastname</label>
                                        <input class="form-control" type="text" required="" id="lastname" name="lastname" value="" placeholder="Enter Lastname">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="text">Email</label>
                                        <input class="form-control" type="text" required="" id="email" name="email" value="" placeholder="Enter Email">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="text">Contect</label>
                                        <input class="form-control" type="text" required="" id="contect" name="contect" value="" placeholder="Enter Contect">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="text">Contect</label>
                                        <input type="file" name="image" id="image" value=""  accept="image/*" required />
                                    </div>

                                    <div class="form-group mb-0 text-center">
                                        <button class="btn btn-primary btn-block" type="submit"> Signup </button>
                                    </div>
                                </form>
 
                            </div> 
                        </div>

                        <div class="row mt-3">
                            <div class="col-12 text-center">
                                <p> <a href="forgot-password" class="text-muted ml-1"><i class="fa fa-lock mr-1"></i>Forgot your password?</a></p>
                            </div> 
                        </div>
                        

                    </div> 
                </div>
            </div>
        </div>

        <%- include('./partials/scprit'); %>
        
    </body>
</html>