<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>

    </head>

    <body>

        <div id="wrapper">

            <%- include('./partials/header'); %>
           
            <div class="content-page">
                <div class="content">

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card-box">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="p-2">
                                                <% for(var i=0; i < enquiry.length; i++) { %>
                                                    <form class="form-horizontal" action="/enquiry" method="POST" name="enquiryForm" id="enquiryForm">
                                                        <div class="row">
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput">First Name</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" name="firstname" id="firstname" class="form-control" value="<%= enquiry[i].firstname %>" readonly >
                                                                </div>
                                                            </div>
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput">Last Name</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" name="lastname" id="lastname" class="form-control" value="<%= enquiry[i].lastname %>" readonly >
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput">Email</label>
                                                                <div class="col-md-10">
                                                                    <input type="email" name="email" id="email" class="form-control" value="<%= enquiry[i].email %>" readonly >
                                                                </div>
                                                            </div>
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput">Mobile No.</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" name="mbileNo" id="mbileNo" class="form-control" value="<%= enquiry[i].mbileNo %>" readonly >
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput">Status</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" name="status"  class="form-control" value="<%= enquiry[i].status %>" readonly >
                                                                </div>
                                                            </div>
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput">Comment</label>
                                                                <div class="col-md-10">
                                                                    <textarea class="form-control"  name="comment" id="comment" rows="5" id="example-textarea" placeholder="Description" readonly required><%= enquiry[i].comment %></textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        
                                                        
                                                        
                                                        <div class="text-center mt-3">
                                                            <a href="/enquiry">
                                                                <button type="button" class="btn btn-bordered-danger waves-effect  width-md waves-light">Cancle</button>
                                                            </a>
                                                        </div>
                                                    </form>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div>
                        </div>  
                    </div> 
                </div>  
            </div>
        </div>
        <%- include('./partials/scprit'); %>
        
    </body>
</html>