<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>

    </head>

    <body>
        <div id="wrapper">
            <%- include('./partials/header'); %>
            <div class="content-page">
                <div class="content">

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card-box">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="p-2">
                                                <% for(var i = 0; i < profile.length; i++) {%>
                                                    <form class="form-horizontal" role="form">
                                                        <div class="row">
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput" >Firstname</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" id="firstname" name="firstname" class="form-control" readonly value="<%= profile[i].firstname %>">
                                                                </div>
                                                            </div>
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput" >Lastname</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" id="simpleinput" class="form-control" readonly value="<%= profile[i].lastname %>">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput" >Email</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" id="simpleinput" class="form-control" readonly value="<%= profile[i].email %>">
                                                                </div>
                                                            </div>
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput" >Username</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" id="simpleinput" class="form-control" readonly value="<%= profile[i].username %>">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput" >Password</label>
                                                                <div class="col-md-10">
                                                                    <input type="text" id="simpleinput" class="form-control" readonly value="<%= profile[i].password %>">
                                                                </div>
                                                            </div>
                                                            <div class="form-group col-md-6 col-xl-6 col-12">
                                                                <label class="col-md-2 col-form-label" for="simpleinput" >Image</label>
                                                                <div class="col-md-10">
                                                                    <img src="data:image/<%=profile[i].image.contentType%>;base64,
                                                                    <%=profile[i].image.data.toString('base64')%>" height="150px">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="text-center mt-3">
                                                            <a href="index">
                                                                <button type="button" class="btn btn-bordered-danger waves-effect  width-md waves-light" >Cancle</button>
                                                            </a>
                                                        </div>
                                                    </form>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div>
                        </div>
    
                        
                    </div> 

                </div>

            </div>

        </div>

        <%- include('./partials/scprit'); %>
        
    </body>
</html>